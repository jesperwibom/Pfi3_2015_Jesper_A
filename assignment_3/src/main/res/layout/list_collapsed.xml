<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/collapsedInfo_departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/short_departure"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/collapsedInfo_travelTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/short_arrival"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imageView_soonDeparture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/ic_report_problem_black_24dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:gravity="center"
        />
</LinearLayout>